---
import Layout from "../layouts/Layout.astro"
import brokenBulb from "../../public/assets/images/brokenBulb.png"
---
<Layout title="404 - Página no encontrada">
    <section class="min-h-screen flex flex-col md:flex-row items-center justify-center gap-10 px-6 bg-gray-200 text-gray-900 dark:bg-gray-900 dark:text-gray-100">
        <!-- Imagen -->
        <div class="w-60 md:w-72">
          <img 
            src={brokenBulb.src} 
            alt="Broken Light Bulb" 
            class="w-full h-auto object-contain"
          />
        </div>
      
        <!-- Texto -->
        <div class="text-center md:text-left">
          <h1 class="text-7xl font-bold text-blue-700 mb-2">404</h1>
          <h2 class="text-lg font-semibold uppercase text-gray-700 dark:text-gray-300 mb-1">
          Parece que estás perdido
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6 text-sm">
          ¡La página que estás buscando no está disponible!
          </p>
          <a 
            href="/" 
            class="inline-flex items-center gap-2 text-gray-700 dark:text-gray-300 font-bold uppercase border-b border-black hover:text-blue-700 dark:hover:text-blue-700 transition-colors"
          >
          <span class="text-xl">←</span>
            Volver al inicio
            
          </a>
        </div>
      </section>
</Layout>
 

