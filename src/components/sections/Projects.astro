---
import { techIcons } from "../../consts/techIcons";
import { projects } from "../../consts/projects";
---

<section
  id="projects"
  class="py-16 dark:bg-gray-900 dark:text-white bg-gray-200 text-gray-900"
>
  <div class="container mx-auto px-6">
    <!-- Tecnologías -->
    <div
      class="text-center mb-16 dark:bg-gray-800 bg-gray-200 p-10 rounded-lg shadow-lg"
    >
      <div class="flex w-full items-center mb-11">
        <div class="dark:border-white border-black border-2 flex-grow border-t">
        </div>
        <div class="mx-4">
          <h2
            class="text-center text-3xl font-bold dark:text-white text-gray-900"
          >
            Tecnologías
          </h2>
        </div>
        <div class="dark:border-white border-black border-2 flex-grow border-t">
        </div>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-3 gap-8">
        {
          techIcons.map((tech) => (
            <div class="relative group flex flex-col items-center animate-slide-in-bottom">
              <img
                src={tech.icon.src}
                alt={tech.alt}
                role="button"
                class="w-16 h-16 object-contain mb-2 hover:scale-110 dark:invert"
              />

              <div class="absolute -bottom-5 opacity-0 group-hover:opacity-100 bg-gray-700 dark:bg-gray-300 text-white dark:text-gray-900 text-xs rounded px-3 py-1 transition-opacity duration-300">
                {tech.name}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Proyectos -->
    <div>
      <h2
        class="text-3xl md:text-4xl font-bold text-center mb-10 animate-fade-in"
      >
        Mis Proyectos
      </h2>

      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          projects.map((project) => (
            <div class="relative overflow-hidden dark:bg-gray-800 bg-gray-200 rounded-xl shadow-lg transition hover:scale-[1.03] hover:shadow-xl animate-fade-up flex flex-col h-full">
              <div class="p-5 flex flex-col flex-grow">
                <h3 class="text-xl font-semibold">{project.title}</h3>
                <p class="mt-2 dark:text-gray-400 text-gray-700 flex-grow mb-4">
                  {project.description}
                </p>
                <div class="flex flex-wrap gap-2 mb-4 cursor-pointer">
                  {project.technologies?.map((tech) => (
                    <span class="px-3 py-1 text-white text-xs font-semibold rounded-lg bg-gradient-to-r from-indigo-500 to-blue-500">
                      {tech}
                    </span>
                  ))}
                </div>

                <div class="dark:border-gray-500 border-black border-1 flex-grow border-t mb-3" />
                <footer>
                  <div class={`flex ${project.demo ? "gap-2" : ""}`}>
                    {project.demo && (
                      <a
                        href={project.demo}
                        target="_blank"
                        class="flex items-center justify-center w-1/2 px-3 py-1 rounded-lg bg-green-500 dark:bg-green-600 text-white font-medium transition-all duration-300 hover:bg-green-600 dark:hover:bg-green-500 hover:shadow-lg"
                      >
                        <i class="bx bxs-show text-2xl mr-2 transition-transform duration-300" />
                        Demo
                      </a>
                    )}
                    <a
                      href={project.link}
                      target="_blank"
                      class={`flex items-center justify-center px-3 py-1 rounded-lg bg-blue-500 dark:bg-blue-600 text-white font-medium transition-all duration-300 hover:bg-blue-600 dark:hover:bg-blue-500 hover:shadow-lg ${
                        project.demo ? "w-1/2" : "w-full"
                      }`}
                    >
                      <i class="bx bxl-github text-2xl mr-2 transition-transform duration-300" />
                      Repositorio
                    </a>
                  </div>
                </footer>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
